# ==============================================
# Airline Management System - Infrastructure
# Environment Configuration Template
# ==============================================

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password_change_this
MYSQL_USER=root
MYSQL_DATABASE=Flights
MYSQL_PORT=3306

# ==============================================
# MESSAGE BROKER CONFIGURATION
# ==============================================
RABBITMQ_USER=airline_user
RABBITMQ_PASS=your_secure_rabbitmq_password_change_this
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ==============================================
# SERVICE PORTS
# ==============================================
API_GATEWAY_PORT=8000
FLIGHTS_SERVICE_PORT=3000
BOOKING_SERVICE_PORT=3001
NOTIFICATION_SERVICE_PORT=4000
FRONTEND_PORT=3002

# ==============================================
# API GATEWAY CONFIGURATION
# ==============================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_change_in_production
JWT_EXPIRY=1d
SALT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# EMAIL CONFIGURATION (Gmail)
# ==============================================
GMAIL_EMAIL=your_email@gmail.com
GMAIL_PASS=your_gmail_app_password
SENDER_EMAIL=airlinenoti@gmail.com
DEFAULT_RECIPIENT_EMAIL=customer@example.com

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Use comma-separated origins for production, or * for development
CORS_ORIGIN=*

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Application Metadata
APP_NAME=Airline Management System
APP_VERSION=1.0.0

# ==============================================
# NOTES:
# ==============================================
# 1. Copy this file to .env and update all values
# 2. Never commit .env file to version control
# 3. For Gmail, use App Password, not regular password
# 4. JWT_SECRET should be at least 32 characters
# 5. Change all default passwords before production deployment
# 6. For production, set specific CORS_ORIGIN domains
